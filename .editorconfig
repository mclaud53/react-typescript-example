[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=tab
tab_width=4
indent_size=4

[{.eslintrc,.babelrc,.stylelintrc,jest.config,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_style=space
indent_size=2

[{*.ats,*.ts}]
indent_style=tab
tab_width=4

[*.tsx]
indent_style=tab
tab_width=4

[{jshint.json,*.jshintrc}]
indent_style=space
indent_size=2

[*.scss]
indent_style=tab
tab_width=4

[{.analysis_options,*.yml,*.yaml}]
indent_style=space
indent_size=2

[tslint.json]
indent_style=space
indent_size=2

